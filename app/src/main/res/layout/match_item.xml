<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_teste">

        <ImageView
            android:id="@+id/logoCasa"
            android:layout_width="122dp"
            android:layout_height="112dp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="16dp"
            android:background="@color/Branco"
            android:maxWidth="100dp"
            android:maxHeight="100dp"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.074" />

        <TextView
            android:id="@+id/nomeCasa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="5dp"
            android:background="@color/Branco"
            app:layout_constraintBottom_toBottomOf="@id/separador"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/logoCasa"
            app:layout_constraintVertical_bias="0.157" />

        <TextView
            android:id="@+id/placar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:background="@color/Branco"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/logoCasa"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.136" />

        <TextView
            android:id="@+id/tempo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:background="@color/Branco"
            app:layout_constraintBottom_toBottomOf="@id/separador"
            app:layout_constraintEnd_toStartOf="@id/logoFora"
            app:layout_constraintStart_toEndOf="@id/logoCasa"
            app:layout_constraintTop_toBottomOf="@id/placar"
            app:layout_constraintVertical_bias="0.112"
            tools:layout_editor_absoluteX="174dp" />

        <ImageView
            android:id="@+id/logoFora"
            android:layout_width="122dp"
            android:layout_height="112dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:background="@color/Branco"
            android:maxWidth="100dp"
            android:maxHeight="100dp"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="@id/separador"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@id/placar"
            app:layout_constraintTop_toTopOf="@+id/logoCasa"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/nomeFora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:background="@color/Branco"
            app:layout_constraintBottom_toBottomOf="@id/separador"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.821"
            app:layout_constraintStart_toEndOf="@id/nomeCasa"
            app:layout_constraintTop_toBottomOf="@id/logoFora"
            app:layout_constraintVertical_bias="0.166" />

        <View
            android:id="@+id/separador"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_marginTop="20dp"
            android:background="@color/preto"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/nomeCasa" />

        <TextView
            android:id="@+id/data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/separador"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/rodada"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/separador"
            app:layout_constraintStart_toStartOf="@id/data"/>

        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="100dp"
            android:layout_marginBottom="50dp"
            app:layout_constraintTop_toBottomOf="@id/separador"
            app:layout_constraintStart_toEndOf="@id/data"
            app:layout_constraintEnd_toStartOf="@id/rodada"
            app:layout_constraintBottom_toBottomOf="parent"/>



    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>
